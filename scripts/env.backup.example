#      {
#        "Version": "2012-10-17",
#        "Statement": [
#          {
#            "Effect": "Allow",
#            "Action": [
#              "s3:PutObject",
#              "s3:GetObject",
#              "s3:DeleteObject",
#              "s3:ListBucket"
#            ],
#            "Resource": [
#              "arn:aws:s3:::SEU-BUCKET-AQUI",
#              "arn:aws:s3:::SEU-BUCKET-AQUI/*"
#            ]
#          }
#        ]
#      }
#
# 2. Railway:
#    - Obtenha a DATABASE_URL do painel do Railway
#    - Configure as variáveis de ambiente no Railway
